<UserControl x:Class="MHWItemBoxTracker.GUI.Settings"
             xmlns:src="clr-namespace:HunterPie.GUI;assembly=HunterPie.UI"
             xmlns:Custom="clr-namespace:HunterPie.GUIControls.Custom_Controls;assembly=HunterPie.UI"
             xmlns:guiControls="clr-namespace:HunterPie.GUIControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">

    <Grid>
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="50" />-->
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." Padding="10,10,10,10" VerticalAlignment="Top"/>
        <RadioButton Grid.Column="1" x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Padding="10,10,10,10" VerticalAlignment="Top"/>
        <RadioButton Grid.Column="2" x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Padding="10,10,10,10" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
